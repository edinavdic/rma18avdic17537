<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="169dp"
        android:orientation="vertical"
        android:layout_marginEnd="5dp">

        <ImageView
            android:id="@+id/eNaslovna"
            android:layout_width="93dp"
            android:layout_height="103dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/fksarajevo" />

        <Button
            android:id="@+id/dPreporuci"
            android:layout_width="93dp"
            android:layout_height="38dp"
            android:textSize="12sp"
            android:focusable="false"
            android:text="Preporuci"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eNaziv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:text="Naziv knjige"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/eAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ime i prezime autora"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/eDatumObjavljivanja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datum objavljivanja"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/eOpis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opis"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/eBrojStranica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Broj stranica"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>
